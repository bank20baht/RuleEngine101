{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@test/*": [
        "./test/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "./dist/**/*"
  ]
}